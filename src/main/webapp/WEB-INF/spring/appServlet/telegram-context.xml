<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:annotation-config></context:annotation-config>

	<bean class="org.telegram.telegrambots.ApiContextInitializer" init-method="init"></bean>

	<bean id="Explainer" class="com.cglee079.cointelebot.telegram.Explainer">
	</bean>
	
	<bean id="TelegramBot" class="com.cglee079.cointelebot.telegram.TelegramBot">
		<constructor-arg index="0" value=""></constructor-arg>
		<constructor-arg index="1" value="cg_xlm_bot"></constructor-arg>
	</bean>
	
	<bean id="TelegramClient" class="com.cglee079.cointelebot.telegram.TelegramClient">
		<constructor-arg index="0" ref="TelegramBot"></constructor-arg>
	</bean>

</beans>
